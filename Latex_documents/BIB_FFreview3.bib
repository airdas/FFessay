issn = {09203796},
journal = {Fusion Engineering and Design},
keywords = {DIII-D,ELMs,ITER},
number = {2-6},
pages = {178--185},
title = {{Physics and engineering issues associated with edge localized mode control in ITER}},
volume = {84},
year = {2009}
}
